<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.humbertomariom.login.MapsActivity" >



    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="400dp"
        android:layout_height="300dp" />

    <Button
        android:id="@+id/bNavigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="NAVEGAR"
        android:textStyle="bold"
        android:layout_below="@+id/map"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#00CCFF"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="-DISTANCIA-"
        android:textStyle="bold"
        android:id="@+id/Distancia"
        android:layout_below="@+id/bNavigation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DIRECCIÃ“N:"
        android:textStyle="bold"
        android:id="@+id/Direccion"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Distancia"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGRESAR"
        android:textStyle="bold"
        android:id="@+id/RegresarSede"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#00CCFF"
        android:textColor="#ffffff"/>


</RelativeLayout>
