<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity" >


    <fragment

        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="400dp"
        android:layout_height="370dp" />

    <Button
        android:id="@+id/bNavegacion"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Navegar"
        android:layout_below="@+id/map"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#00CCFF"
        android:textColor="#ffffff" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="DISTANCIA:"
        android:id="@+id/Distancia"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/bNavegacion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DIRECCIÃ“N:"
        android:id="@+id/Direccion"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/Distancia"
        android:layout_alignRight="@+id/Distancia"
        android:layout_alignEnd="@+id/Distancia" />


</RelativeLayout>